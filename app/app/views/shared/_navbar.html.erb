<div class = header-list>
  <p class="header-logo"><%= link_to "Potepan_reseve","/" %></p>
  <% if user_signed_in? %>
    <div class="dropdown">
      <div class="header-icon">
        <% if current_user.profile_image.present? %>
          <td><%= image_tag current_user.profile_image %></td>
        <% else %>
          <td><%= image_tag "icon_avater.png" %></td>
        <% end %>
      </div>
      <div class = "user_name">
        <div class="btn-group dropleft">
          <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.name %>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item"><%= link_to "施設の新規登録", new_room_path %></a>
            <a class="dropdown-item"><%= link_to "予約済み一覧", reservations_path %></a>
            <a class="dropdown-item"><%= link_to "登録済み一覧", rooms_path %></a>
            <a class="dropdown-item"><%= link_to "アカウント設定", '/users/account' %></a>
            <a class="dropdown-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></a>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <div>
      <%= link_to "ログイン", new_user_session_path, class: 'post' %>
      <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
    </div>
  <% end %>
</div>

